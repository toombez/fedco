{% endmacro %}

{% macro raleway_sub_heading(text, tag = 'span', class = "") %}
    {% set class = "font-raleway " + class %}

    {{ sub_heading(text, tag, class) }}
{% endmacro %}

{% macro montserrat_body(text, tag = 'span', class = "") %}
    {% set class = "font-montserrat " + class %}

    {{ body(text, tag, class) }}
{% endmacro %}

{% macro raleway_body(text, tag = 'span', class = "") %}
    {% set class = "font-raleway " + class %}

    {{ body(text, tag, class) }}
{% endmacro %}
