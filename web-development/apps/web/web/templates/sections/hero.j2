{% import './components/hero_card.j2' as hero_card %}
{% import './components/container.j2' as container %}

<section
    id="hero"
    class="bg-gradient-to-r from-black to-light-black rounded-b-[32px]"
>
    {% call container.hero_container() %}
        <ul
            class="grid grid-cols-1 grid-flow-row desktop:grid-cols-6 desktop:auto-rows-fr gap-2 desktop:gap-[1px] items-stretch"
        >
            <li
                class="desktop:col-start-1 desktop:col-end-3 desktop:row-start-1 desktop:row-end-3"
            >
                {% call hero_card.hero_card(
                    '/#footer',
                    class="border border-white aspect-square"
                ) %}
                    {{ hero_card.hero_card_two_line_content(
                        'Педагог/контакты',
                        'Фамилия Имя Отчество',
                        class="text-white"
                    ) }}
                {% endcall %}
            </li>
            <li
                class="desktop:col-start-3 desktop:col-end-6 desktop:row-start-1"
            >
                {% call hero_card.hero_card(
                    '/#about',
                    class="bg-gradient-to-r from-purple to-gray"
                ) %}
                    {{ hero_card.hero_card_one_line_content(
                        'О направлении',
                        class="text-black"
                    ) }}
                {% endcall %}
            </li>
            <li
                class="desktop:col-start-4 desktop:col-end-7 desktop:row-start-2"
            >
                {% call hero_card.hero_card(
                    '/news',
                    class="bg-gradient-to-r from-light-black to-yellow"
                ) %}
                    {{ hero_card.hero_card_one_line_content(
                        'Новости',
                        class="text-white"
                    ) }}
                {% endcall %}
            </li>
            <li
                class="desktop:col-start-1 desktop:col-end-5 desktop:row-start-3"
            >
                {% call hero_card.hero_card(
                    '/#galery',
                    class="bg-gradient-to-r from-green to-yellow"
                ) %}
                    {{ hero_card.hero_card_one_line_content(
                        'Фотогалерея',
                        class="text-white"
                    ) }}
                {% endcall %}
            </li>
            <li
                class="desktop:col-start-2 desktop:col-end-7 desktop:row-start-4"
            >
                {% call hero_card.hero_card(
                    '/#modules',
                    class="bg-gradient-to-r from-gray to-white"
                ) %}
                    {{ hero_card.hero_card_one_line_content(
                        'Образовательны модули',
                        class="text-black"
                    ) }}
                {% endcall %}
            </li>
        </ul>
    {% endcall %}
</section>
