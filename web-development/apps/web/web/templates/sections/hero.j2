{% import './components/hero_card.j2' as hero_card %}
{% import './components/container.j2' as container %}

<section
    id="hero"
    class="bg-gradient-to-r from-black to-light-black pt-8 pb-16 rounded-b-[32px]"
>
    {% call container.container() %}
        <ul
            class="grid grid-cols-6 grid-flow-row auto-rows-fr gap-[1px] items-stretch"
        >
            <li
                class="col-start-1 col-end-3 row-start-1 row-end-3"
            >
                {% call hero_card.hero_card(
                    '/#footer',
                    class="border border-white aspect-square"
                ) %}
                    {{ hero_card.hero_card_two_line_content(
                        'Педагог/контакты',
                        'Фамилия Имя Отчество',
                    ) }}
                {% endcall %}
            </li>
            <li
                class="col-start-3 col-end-6 row-start-1 row-end-2"
            >
                {% call hero_card.hero_card(
                    '/#about',
                    class="bg-gradient-to-r from-purple to-gray"
                ) %}
                    {{ hero_card.hero_card_one_line_content(
                        'О направлении',
                        class="text-black"
                    ) }}
                {% endcall %}
            </li>
            <li
                class="col-start-3 col-end-7 row-start-2 row-end-3"
            >
                {% call hero_card.hero_card(
                    '/#galery',
                    class="bg-gradient-to-r from-green to-yellow"
                ) %}
                    {{ hero_card.hero_card_one_line_content(
                        'Фотогалерея',
                        class="text-white"
                    ) }}
                {% endcall %}
            </li>
            <li
                class="col-start-2 col-end-5 row-start-3 row-end-4"
            >
                {% call hero_card.hero_card(
                    '/#modules',
                    class="bg-gradient-to-r from-gray to-white"
                ) %}
                    {{ hero_card.hero_card_one_line_content(
                        'Образовательны модули',
                        class="text-black"
                    ) }}
                {% endcall %}
            </li>
            <li
                class="col-start-5 col-end-7 row-start-3 row-end-4"
            >
                {% call hero_card.hero_card(
                    '/news',
                    class="bg-gradient-to-r from-light-black to-yellow"
                ) %}
                    {{ hero_card.hero_card_one_line_content(
                        'Новости',
                        class="text-white"
                    ) }}
                {% endcall %}
            </li>
        </ul>
    {% endcall %}
</section>
